{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "clangd-msvc-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clangd-msvc",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "inherits": "ninja-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "ON",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "inherits": "ninja-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "OFF",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "ninja-ci",
      "displayName": "Ninja CI",
      "inherits": "ninja-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "STUDENT_ATTENDANCE_ENABLE_WARNINGS": "ON",
        "STUDENT_ATTENDANCE_WARNINGS_AS_ERRORS": "ON",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "ON",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "OFF",
        "STUDENT_ATTENDANCE_BUILD_BENCHMARKS": "OFF",
        "STUDENT_ATTENDANCE_BUILD_DOCS": "OFF"
      }
    },
    {
      "name": "msys2-mingw64-base",
      "hidden": true,
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/MSYS2MinGW64Toolchain.cmake"
      }
    },
    {
      "name": "msys2-mingw64-debug",
      "displayName": "MSYS2 MinGW64 Debug",
      "inherits": "msys2-mingw64-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "ON",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "msys2-mingw64-release",
      "displayName": "MSYS2 MinGW64 Release",
      "inherits": "msys2-mingw64-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "OFF",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "vs-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vs-debug",
      "displayName": "VS Debug",
      "inherits": "vs-base",
      "cacheVariables": {
        "STUDENT_ATTENDANCE_BUILD_TESTS": "ON",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "clangd-msvc",
      "displayName": "Clangd (MSVC via Ninja)",
      "inherits": "clangd-msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "STUDENT_ATTENDANCE_BUILD_TESTS": "ON",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "vs-release",
      "displayName": "VS Release",
      "inherits": "vs-base",
      "cacheVariables": {
        "STUDENT_ATTENDANCE_BUILD_TESTS": "OFF",
        "STUDENT_ATTENDANCE_BUILD_EXAMPLES": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "clangd-msvc",
      "configurePreset": "clangd-msvc"
    },
    {
      "name": "msys2-mingw64-debug",
      "configurePreset": "msys2-mingw64-debug"
    },
    {
      "name": "msys2-mingw64-release",
      "configurePreset": "msys2-mingw64-release"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "ninja-ci",
      "configurePreset": "ninja-ci"
    },
    {
      "name": "vs-debug",
      "configurePreset": "vs-debug",
      "configuration": "Debug"
    },
    {
      "name": "vs-release",
      "configurePreset": "vs-release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "msys2-mingw64-debug",
      "configurePreset": "msys2-mingw64-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "msys2-mingw64-release",
      "configurePreset": "msys2-mingw64-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ninja-ci",
      "configurePreset": "ninja-ci",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "vs-debug",
      "configurePreset": "vs-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
